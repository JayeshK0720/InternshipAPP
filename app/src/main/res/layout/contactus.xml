<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get in Touch"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textColor="#EF6803"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Chat, Reach Out to Us"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="34sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Have questions or feedback? We're here to help. Send us a message, and we will sortout your problem"
        android:layout_margin="10dp"
        android:textSize="16dp"
        />

    <View
        android:layout_width="390dp"
        android:layout_height="4dp"
        android:background="#C3BEBE"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameContactus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your Full Name"
            android:ems="10"
            android:textAlignment="textStart"
            android:layout_marginTop="10sp"/>

        <EditText
            android:id="@+id/emailContactus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your Email Address"
            android:ems="10"
            android:textAlignment="textStart"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/msgContactus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Query/Message Here"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:layout_marginTop="25dp"
            />


    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="I agree to our friendly privacy policy" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_margin="30dp"
        android:textColor="#000"
        android:padding="10dp"
        android:backgroundTint="#12BF5A"/>


</LinearLayout>